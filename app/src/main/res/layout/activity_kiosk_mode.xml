<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/distance_medium"
    tools:context="com.balazscsernai.kioskmode.KioskModeActivity" >

    <CheckBox
        android:id="@+id/hideNavigationBarActivity_checkBox"
        android:layout_width="@dimen/size_large_thumbnail"
        android:layout_height="@dimen/size_large_thumbnail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_large_thumbnail"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/hideNavigationBarActivity_checkBox"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:text="@string/hideNavigationBarActivity_label_text" />

</RelativeLayout>